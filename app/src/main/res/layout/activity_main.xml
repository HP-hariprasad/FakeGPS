<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TextView" />

    <Button
        android:id="@+id/upload"
        android:layout_below="@id/textView"
        android:layout_width="400dp"
        android:layout_height="65dp"
        android:layout_marginTop="50dp"
        android:clickable="true"
        android:layout_weight="1"
        android:text="Upload"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="102dp" />

    <Spinner
        android:id="@+id/spinnerDelayTimer"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:layout_below="@id/largeLabel"
        android:layout_width="1in"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/start"
        android:layout_width="400dp"
        android:layout_height="65dp"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:layout_below="@id/spinnerDelayTimer"
        android:layout_weight="1"
        android:text="Start"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="26dp" />

    <Button
        android:id="@+id/stop"
        android:layout_width="400dp"
        android:layout_height="65dp"
        android:layout_below="@id/start"
        android:clickable="true"
        android:layout_weight="1"
        android:text="Stop"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="102dp" />

    <TextView
        android:id="@+id/largeLabel"
        android:layout_below="@id/upload"
        android:layout_marginTop="10dp"
        android:layout_width="2in"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Select the Interval time" />

    <TextView
        android:id="@+id/SecondsLabel"
        android:layout_below="@id/largeLabel"
        android:layout_toRightOf="@id/spinnerDelayTimer"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_width="2in"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Seconds" />


</RelativeLayout>